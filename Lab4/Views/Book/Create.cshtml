@model BookModel

<h2 class="mt-4">Додати нову книгу</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row m-1">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row m-1">
                @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row m-1">
                @Html.LabelFor(model => model.Topic, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Topic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Topic, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row m-1">
                @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row m-1">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Додати</button>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    @Html.ActionLink("Повернутися до списку", "Index", new { @class = "btn btn-secondary" })
</div>
