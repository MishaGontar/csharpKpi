@model List<DLL2.Book>
<h2 class="mt-4">Список книжок</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Назва</th>
                <th scope="col">Автор</th>
                <th scope="col">Тематика</th>
                <th scope="col">Кількість</th>
                <th scope="col">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <th scope="row">@book.Id</th>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Topic</td>
                    <td>@book.Quantity</td>
                    <td>
                        <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="btn btn-info btn-sm">Деталі</a>
                        <a href="@Url.Action("Edit", "Book", new { id = book.Id })" class="btn btn-warning btn-sm">Редагувати</a>
                        <a href="@Url.Action("Delete", "Book", new { id = book.Id })" class="btn btn-danger btn-sm">Видалити</a>
                        <a href="@Url.Action("BorrowBook", "Book", new { id = book.Id })" class="btn btn-success btn-sm">Взяти книжку</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
