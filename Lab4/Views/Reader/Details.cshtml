@model DLL2.Reader

<div class="container mt-4">
    <h2 class="mb-4">Деталі читача</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Основна інформація</h4>
            <hr/>

            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Ім'я</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Кількість книг</dt>
                <dd class="col-sm-9">@Model.GetsBooks.Count</dd>
            </dl>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Список взятих книг</h4>
            <hr/>

            @if (Model.GetsBooks.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Назва</th>
                            <th scope="col">Автор</th>
                            <th scope="col">Тематика</th>
                            <th scope="col">Дії</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var book in Model.GetsBooks)
                        {
                            <tr>
                                <th scope="row">@book.Id</th>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.Topic</td>
                                <td>
                                    <form method="post" asp-action="GiveBackBook" asp-controller="Reader">
                                        <input type="hidden" name="readerId" value="@Model.Id"/>
                                        <input type="hidden" name="bookId" value="@book.Id"/>
                                        <button type="submit" class="btn btn-warning">Повернути книгу</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>Читач ще не взяв жодну книгу.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Reader")" class="btn btn-secondary">Повернутися до списку читачів</a>
    </div>
</div>