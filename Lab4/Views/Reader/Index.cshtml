@model List<DLL2.Reader>

<h2 class="mt-4">Список читачів</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="bg-primary text-white">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ім'я</th>
                <th scope="col">Email</th>
                <th scope="col">Кількість книг</th>
                <th scope="col">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reader in Model)
            {
                <tr>
                    <td>@reader.Id</td>
                    <td>@reader.Name</td>
                    <td>@reader.Email</td>
                    <td>@reader.GetsBooks.Count</td>
                    <td>
                        <a href="@Url.Action("Details", "Reader", new { id = reader.Id })" class="btn btn-info btn-sm">Деталі</a>
                        <a href="@Url.Action("Edit", "Reader", new { id = reader.Id })" class="btn btn-warning btn-sm">Редагувати</a>
                        <a href="@Url.Action("Delete", "Reader", new { id = reader.Id })" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
